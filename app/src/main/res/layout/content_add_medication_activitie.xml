<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medctrl.mdteam.medctrl.activities.AddMedicationActivitie"
    tools:showIn="@layout/activity_add_medication_activitie">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="MEDICAÇÃO"
        android:textSize="25dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:layout_width="275dip"
        android:layout_height="wrap_content"
        android:hint="NOME COMERCIAL"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/comercialName"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        />

    <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/question_mark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:layout_width="105dip"
        android:layout_height="wrap_content"
        android:hint="DOSAGEM"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/dosage"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        />

    <TextView
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="mg"
        android:textSize="25dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"/>

    <EditText
        android:layout_width="65dip"
        android:layout_height="wrap_content"
        android:hint="DOSE"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/dose"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        />

    <TextView
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="mg"
        android:textSize="25dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"/>

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/question_mark"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="11dip"
            android:src="@drawable/clock"/>


        <TextView
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="HORÁRIO"
            android:textSize="25dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"/>

        <EditText
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:padding="10dip"
            android:textColorHint="@color/colorInnerBoxes"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/rect_text_edit"
            android:id="@+id/time"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dip"
            />

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="40dip"
            android:src="@drawable/question_mark"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="QUANTOS COMPRIMIDOS TEM?"
            android:textSize="18dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"/>

        <EditText
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColorHint="@color/colorInnerBoxes"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/rect_text_edit"
            android:id="@+id/quantity"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dip"
            />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:padding="10dip"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="INSERIR IMAGEM"
            android:textSize="25dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"/>

        <Button
            android:layout_width="135dip"
            android:layout_height="wrap_content"
            android:text="GALERIA"
            android:onClick="sendMessage"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorPrimaryDark"
        />

    </LinearLayout>

    <Button
        android:layout_width="135dip"
        android:layout_height="wrap_content"
        android:text="TIRAR FOTO"
        android:textColor="?attr/colorPrimaryDark"
        android:onClick="sendMessage"
        android:layout_gravity="right"
        android:layout_marginRight="7dip"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="5dip"/>
        />

    <TextView
        android:id="@+id/readyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:text="CONCLUÍDO"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dip"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="100dip"
        android:layout_marginRight="97dip"
        android:background="@drawable/button_background"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"/>

</LinearLayout>
