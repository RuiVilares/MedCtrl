<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medctrl.mdteam.medctrl.activities.ConfigurationActivity"
    tools:showIn="@layout/activity_configuration"
    android:layout_marginBottom="-10dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="PERFIL DO CUIDADOR"
        android:textSize="25dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NOME"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/caretakerName"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EMAIL"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/caretakerEmail"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TELEMÓVEL"
        android:padding="10dip"
        android:textColorHint="@color/colorInnerBoxes"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rect_text_edit"
        android:id="@+id/caretakerCellphone"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="2dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/notifications_config"
        android:padding="7dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICAÇÕES"
            android:textAlignment="center"
            android:textSize="30dip"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/background_primary_dark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receber por "
                android:textColor="@color/colorTextDark"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textColor="@color/colorTextDark"
                android:textSize="20dip"
                android:textStyle="bold"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
            <ToggleButton
                android:id="@+id/toggleButtonEmail"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:layout_marginTop="7dip"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_marginLeft="80dip"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receber por "
                android:textColor="@color/colorTextDark"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sms"
                android:textStyle="bold"
                android:textColor="@color/colorTextDark"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
            <ToggleButton
                android:id="@+id/toggleButtonSMS"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:layout_marginTop="7dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_marginLeft="93dip"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textSize="15dip"
        android:text="Defina uma password para que apenas o cuidador tenha acesso à configuração"/>

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"
        android:layout_marginRight="100dip"
        android:hint="PIN"
        android:background="@drawable/pin_box"
        android:textSize="20dip"
        android:textColor="#FFF"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/readyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="CONCLUÍDO"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dip"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="100dip"
        android:layout_marginRight="97dip"
        android:background="@drawable/button_background"/>


</LinearLayout>
